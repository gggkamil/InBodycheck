@model IEnumerable<InBodycheck.Models.BillModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista rachunków</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:65%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:65%">
                @Html.ActionLink("Gotowe", "Done", new { id=item.ReceiptID  }, new { @class = "btn btn-success"})
                    @Html.ActionLink("Szczegóły", "Details", new { id=item.ReceiptID}, new { @class = "btn btn-info"})
                    @Html.ActionLink("Edytuj", "Edit", new { id=item.ReceiptID  }, new { @class = "btn btn-warning"})
                    @Html.ActionLink("Usuń", "Delete", new {  id=item.ReceiptID }, new { @class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
