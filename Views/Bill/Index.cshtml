@model IEnumerable<InBodycheck.Models.BillModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista rachunków</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Gotowe", "Done", new { id=item.ReceiptID  }) |
                @Html.ActionLink("Edytuj", "Edit", new { id=item.ReceiptID  }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=item.ReceiptID}) |
                @Html.ActionLink("Usuń", "Delete", new {  id=item.ReceiptID })
            </td>
        </tr>
}
    </tbody>
</table>
